{
  "compilerOptions": {
    "jsx": "react",//开启 JSX 支持
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ],
    "forceConsistentCasingInFileNames": true, // 添加此行
    "strict": true // 添加此行
  },
  "include": [
    "**/*.ts"
  ]
}
